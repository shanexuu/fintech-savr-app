{
  "expo": {
    "name": "Savr",
    "slug": "savr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "savr",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://savr.dev"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Svar to access your photos."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Svar to use Face ID."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
